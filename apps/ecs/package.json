{
  "name": "yiqidu-ecs",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node scripts/start-standalone.mjs",
    "lint": "eslint",
    "test:e2e": "env -u NO_COLOR playwright test --project=chromium",
    "test:e2e:core": "env -u NO_COLOR playwright test tests/e2e/platform-regression.spec.ts --project=chromium --project=mobile-chromium",
    "test:e2e:auth": "env -u NO_COLOR playwright test tests/e2e/auth-create.spec.ts --project=chromium",
    "test:e2e:realtime": "env -u NO_COLOR playwright test tests/e2e/interact-realtime.spec.ts --project=chromium",
    "test:e2e:prod": "env -u NO_COLOR E2E_BASE_URL=https://tongxy.xyz playwright test tests/e2e/platform-regression.spec.ts --project=chromium --project=mobile-chromium --reporter=line",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "backup:create": "bash scripts/backup.sh",
    "backup:restore": "bash scripts/restore.sh",
    "admin:init": "node scripts/init-admin.mjs",
    "smoke:seed": "node scripts/seed-smoke-users.mjs",
    "smoke:api": "node scripts/smoke-api.mjs",
    "smoke:rate-limit": "node scripts/smoke-auth-rate-limit.mjs",
    "smoke:all": "npm run smoke:seed && npm run smoke:api && npm run smoke:rate-limit",
    "verify:release": "bash scripts/release-verify.sh"
  },
  "dependencies": {
    "@yiqidu/content": "*",
    "@yiqidu/ui": "*",
    "@tailwindcss/postcss": "^4.1.18",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.24",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5"
  }
}
